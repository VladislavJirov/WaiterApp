<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.noldorknight.waiterapp.NewOrder"
    android:background="@drawable/outdoor_restaurant">

    <Button

        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сменить"
        android:id="@+id/OrdChangeTable"
        android:layout_row="0"
        android:layout_column="0"
        android:focusableInTouchMode="false"
        android:textColor="#ffffffff"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/OrdTable"
        android:layout_row="0"
        android:layout_column="1"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        />

    <ListView
        android:layout_width="315dp"
        android:layout_height="285dp"
        android:id="@+id/OrdDishes"
        android:layout_row="1"
        android:layout_column="6"
        android:layout_columnSpan="9"
        android:layout_rowSpan="2"
        android:choiceMode="singleChoice"
        android:layout_margin="5dp"
        android:background="#ff7a7369"
        android:divider="#ffffffff"
        android:dividerHeight="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/OrdUsername"
        android:layout_row="0"
        android:layout_column="6"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:layout_columnSpan="2" />

    <Button
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:text="Готово"
        android:id="@+id/OrdDone"
        android:layout_column="9"
        android:layout_row="0"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_columnSpan="1"
        android:layout_gravity="center" />

    <ListView
        android:layout_width="327dp"
        android:layout_height="285dp"
        android:id="@+id/OrdOrder"
        android:layout_row="1"
        android:layout_columnSpan="3"
        android:layout_column="0"
        android:focusableInTouchMode="false"
        android:headerDividersEnabled="false"
        android:drawSelectorOnTop="false"
        android:choiceMode="singleChoice"
        android:paddingRight="10dp"
        android:dividerHeight="1dp"
        android:clickable="false"
        android:layout_margin="5dp"
        android:divider="#ffffffff"
        android:background="#ff7a7369" />

    <CheckBox
        android:layout_width="147dp"
        android:layout_height="72dp"
        android:text="Прим."
        android:id="@+id/OrdModif"
        android:layout_row="3"
        android:layout_column="10"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:textSize="20dp" />

    <TextView
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Итого"
        android:id="@+id/totalPrice"
        android:layout_row="2"
        android:layout_column="0"
        android:textColor="#ffffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:text="Del"
        android:id="@+id/OrdRemoveAll"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_gravity="left"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView2"
        android:layout_row="3"
        android:layout_column="3"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:textSize="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:text="x1"
        android:id="@+id/OrdAddx1"
        android:layout_row="3"
        android:layout_column="6"
        android:textColor="#ffffffff"
        android:focusable="false"
        android:singleLine="false"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ListView
        android:layout_width="226dp"
        android:layout_height="285dp"
        android:id="@+id/OrdCategories"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_rowSpan="2"
        android:footerDividersEnabled="false"
        android:choiceMode="singleChoice"
        android:paddingRight="10dp"
        android:dividerHeight="1dp"
        android:layout_columnSpan="3"
        android:layout_margin="5dp"
        android:background="#ff7a7369"
        android:divider="#ffffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:text="x2"
        android:id="@+id/OrdAddx2"
        android:layout_row="3"
        android:layout_column="7"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:textSize="25dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:text="-1"
        android:id="@+id/OrdRemoveOne"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="left"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:textSize="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:text="x3"
        android:id="@+id/OrdAddx3"
        android:layout_row="3"
        android:layout_column="8"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:textSize="25dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:text="x4"
        android:id="@+id/OrdAddx4"
        android:layout_row="3"
        android:layout_column="9"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:textSize="25dp" />

</GridLayout>
