<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:screenOrientation="landscape"
    android:background="@drawable/outdoor_restaurant"
    tools:context="com.noldorknight.waiterapp.MainMenu"
    android:columnOrderPreserved="true">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:text="Разместить гостей и принять заказ"
        android:id="@+id/placevisitors"
        android:layout_marginTop="25dp"
        android:onClick="placevisitors"
        android:layout_toEndOf="@+id/username"
        android:layout_below="@+id/username"
        android:layout_alignParentStart="true"
        android:layout_column="1"
        android:layout_row="1"
        android:textColor="#ffffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_gravity="center" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выйти"
        android:onClick="exitaccount"
        android:id="@+id/button"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_column="0"
        android:layout_row="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/username"
        android:textColor="#ffffffff"
        android:clickable="true"
        android:layout_column="1"
        android:layout_row="0" />

    <Button
        android:layout_width="363dp"
        android:layout_height="78dp"
        android:text="Активные заказы"
        android:id="@+id/button3"
        android:layout_marginTop="25dp"
        android:onClick="placevisitors"
        android:layout_toEndOf="@+id/username"
        android:layout_below="@+id/username"
        android:layout_alignParentStart="true"
        android:layout_column="1"
        android:layout_row="2"
        android:textColor="#ffffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_gravity="center" />

    <Button
        android:layout_width="363dp"
        android:layout_height="78dp"
        android:text="Рассчитать заказ"
        android:id="@+id/button4"
        android:layout_marginTop="25dp"
        android:onClick="placevisitors"
        android:layout_toEndOf="@+id/username"
        android:layout_below="@+id/username"
        android:layout_alignParentStart="true"
        android:layout_column="1"
        android:layout_row="3"
        android:textColor="#ffffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_gravity="center|top" />

</GridLayout>
